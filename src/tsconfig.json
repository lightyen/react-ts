{
	"extends": "../tsconfig",
	"compilerOptions": {
		"allowJs": false,
		"checkJs": false,
		"strictNullChecks": false, // 對開發不友善，尤其是使用 ref 的時候，所以我決定關閉它
		"experimentalDecorators": false, // 我不喜歡這個
		"jsx": "preserve",
		"module": "esnext",
		"moduleResolution": "node",
		"target": "esnext",
		"lib": ["esnext", "dom", "dom.iterable"],
		"types": ["react", "webpack-env"],
		"baseUrl": ".",
		"paths": {
			"~/*": ["./*"]
		}
	}
}
