{
	"extends": "./tsconfig.base",
	"compilerOptions": {
		"allowJs": false, // js 的問題交給 babel
		"strictNullChecks": false, // 對開發不友善，我決定關閉它
		"experimentalDecorators": false, // 我不喜歡
		"jsx": "preserve",
		"module": "esnext",
		"moduleResolution": "node",
		"target": "esnext",
		"lib": ["esnext", "dom", "dom.iterable"],
		"types": ["react", "webpack-env"],
		"baseUrl": "./src",
		"paths": {
			"~/*": ["./*"]
		}
	}
}
