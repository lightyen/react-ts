{
	"extends": "./tsconfig.base",
	"compilerOptions": {
		"strictNullChecks": false, // 對開發不友善，我決定關閉它
		"noImplicitAny": false, // 為了相容於類型定義還不是那麼完善的 js library, 或者 jsx
		"jsx": "preserve",
		"module": "esnext",
		"moduleResolution": "node",
		"target": "esnext",
		"lib": ["esnext", "dom", "dom.iterable"],
		"types": ["react", "webpack-env"],
		"baseUrl": "./src",
		"paths": {
			"~/*": ["./*"]
		}
	}
}
