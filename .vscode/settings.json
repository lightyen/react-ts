{
	"editor.formatOnSave": true,
	"formatFiles.excludePattern": "node_modules,build,.gitignore,.editorconfig,.browserslistrc,yarn.lock",
	"files.associations": {
		".prettierrc": "json",
		".eslintrc": "json"
	},
	"search.exclude": {
		"**/build": true,
		"**/node_modules": true
	},
	"typescript.tsdk": "node_modules/typescript/lib",
	"npm.autoDetect": "off",
	"typescript.tsc.autoDetect": "off",
	"eslint.validate": [
		"javascript",
		"javascriptreact",
		"typescript",
		"typescriptreact"
	],
	"files.exclude": {
		"**/.cache": true,
		"**/node_modules": true,
		"yarn.lock": true
	},
	"files.watcherExclude": {
		"**/.cache/**": true,
		"**/build": true
	},
	"css.validate": false,
	"stylelint.config": {
		"rules": {
			"at-rule-no-unknown": [
				true,
				{
					"ignoreAtRules": [
						"tailwind",
						"apply",
						"variants",
						"responsive",
						"screen"
					]
				}
			],
			"declaration-block-trailing-semicolon": null,
			"no-descending-specificity": null
		}
	},
	"javascript.suggestionActions.enabled": false,
	"i18n-ally.localesPaths": ["src/store/i18n/locales"],
	"i18n-ally.sourceLanguage": "zh-TW",
	"i18n-ally.enabledParsers": ["ts"],
	"i18n-ally.pathMatcher": "{locale}.ts",
	"i18n-ally.annotations": true,
	"i18n-ally.annotationInPlace": true
}
